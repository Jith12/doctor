<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5sdp"
            app:cardMaxElevation="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_weight="0"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/booking"
                    android:scaleType="fitXY"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Booking (Today)"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="start|center"
                        android:padding="@dimen/_5sdp"
                        android:gravity="start|center"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/booking_todaycount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="start|center"
                        android:padding="@dimen/_5sdp"
                        android:gravity="start|center"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5sdp"
            app:cardMaxElevation="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_weight="0"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/booking"
                    android:scaleType="fitXY"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Booking"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="start|center"
                        android:padding="@dimen/_5sdp"
                        android:gravity="start|center"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/booking_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="start|center"
                        android:padding="@dimen/_5sdp"
                        android:gravity="start|center"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5sdp"
            app:cardMaxElevation="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_weight="0"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/user_profile"
                    android:scaleType="fitXY"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="start|center"
                        android:padding="@dimen/_5sdp"
                        android:gravity="start|center"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/customer_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="start|center"
                        android:padding="@dimen/_5sdp"
                        android:gravity="start|center"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:fontFamily="@font/regular"
                android:layout_gravity="start|center"
                android:padding="@dimen/_5sdp"
                android:gravity="start|center"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/select_date"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:fontFamily="@font/regular"
                android:layout_gravity="end|center"
                android:padding="@dimen/_5sdp"
                android:gravity="end|center"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/booking_viewall"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viewall"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal"
                android:fontFamily="@font/regular"
                android:layout_gravity="end|center"
                android:padding="@dimen/_5sdp"
                android:gravity="end|center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal|vertical">

                <TableLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:stretchColumns="1,2,3,4,5,6"
                    android:id="@+id/activity_tableLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TableRow
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_column="1"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/bold"
                            android:layout_width="0dp"
                            android:text="Date"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_column="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/bold"
                            android:layout_width="0dp"
                            android:text="Booking No"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_column="3"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/bold"
                            android:layout_width="0dp"
                            android:text="Customer"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_column="4"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/bold"
                            android:layout_width="0dp"
                            android:text="Mobile No"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_column="5"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/bold"
                            android:layout_width="0dp"
                            android:text="Reason"
                            android:layout_height="wrap_content"/>

                    </TableRow>

                </TableLayout>

            </HorizontalScrollView>

            <View
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@color/warm_grey"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>

